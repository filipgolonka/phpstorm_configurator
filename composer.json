{
  "name": "ralfmaxxx/phpstorm_configurator",
  "description": "Configure you phpstorm based on one file",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "Rafał Kański",
      "email": "rafal.kanski@schibsted.pl"
    }
  ],
  "require": {
    "symfony/console": "2.6.*",
    "symfony/yaml": "2.6.*",
    "symfony/config": "2.6.*",
    "symfony/property-access": "2.6.*"
  },
  "require-dev":{
    "phpmd/phpmd": "2.2.*",
    "squizlabs/php_codesniffer": "2.3.*",
    "behat/behat": "3.*",
    "phpspec/phpspec": "2.*"
  },
  "autoload": {
    "psr-4": {
      "Phpstorm\\Configurator\\": "src/Phpstorm/Configurator"
    }
  },
  "bin": [
    "bin/phpstorm-configurator"
  ]
}
